# .env - Environment Configuration UPDATED for v4.1.0 fixes
# Place this file in your PROJECT ROOT directory (same level as package.json)

# Backend URL - DO NOT CHANGE THIS
REACT_APP_BACKEND_URL=https://news-impact-screener-backend.onrender.com

# Application Configuration - UPDATED
REACT_APP_VERSION=4.1.0-fixed
REACT_APP_ENVIRONMENT=production

# Cache Configuration - OPTIMIZED for better performance
REACT_APP_CACHE_DURATION=60000
REACT_APP_CACHE_VERSION=v4.1.0

# API Configuration - OPTIMIZED for reliability
REACT_APP_API_TIMEOUT=45000
REACT_APP_MAX_REQUESTS_PER_MINUTE=30
REACT_APP_REQUEST_TIMEOUT=45000

# Performance Monitoring - ENHANCED for debugging
REACT_APP_ENABLE_PERFORMANCE_MONITORING=true
REACT_APP_ENABLE_ERROR_REPORTING=true
REACT_APP_ENABLE_DEBUG_LOGS=true

# Feature Flags
REACT_APP_ENABLE_BETA_FEATURES=false
REACT_APP_SERVICE_WORKER_ENABLED=true

# Build Configuration
REACT_APP_BUILD_DATE=2025-08-15

# NEW: Additional configuration for v4.1.0 fixes
REACT_APP_RETRY_ATTEMPTS=3
REACT_APP_BATCH_SIZE=10
REACT_APP_CONNECTION_CHECK_INTERVAL=30000

# Development helpers (will be ignored in production builds)
REACT_APP_ENABLE_DEBUG_PANEL=true
REACT_APP_LOG_LEVEL=debug