# .env - Frontend Configuration (Root Directory)
# Updated to work with your backend configuration

# Backend API URL - Use localhost for development
REACT_APP_BACKEND_URL=http://localhost:3001

# Application Configuration  
REACT_APP_VERSION=3.2.0
REACT_APP_ENVIRONMENT=development

# API Configuration
REACT_APP_API_TIMEOUT=15000
REACT_APP_MAX_REQUESTS_PER_MINUTE=80

# Feature Flags
REACT_APP_ENABLE_REAL_DATA=true
REACT_APP_ENABLE_DEBUG_LOGS=true

# Cache Configuration
REACT_APP_CACHE_VERSION=v3.2.0